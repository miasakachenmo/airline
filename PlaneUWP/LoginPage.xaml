<Page
    x:Class="PlaneUWP.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PlaneUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="请先登录" Margin="0,0,0,10" TextAlignment="Center" FontSize="40"></TextBlock>
            <RichEditBox Height="40" Width="300" Margin="0,0,0,10"/>
            <RichEditBox Height="40" Width="300" Margin="0,0,0,10"/>
            <TextBlock Name="Pass" Height="40" Width="300" Margin="0,0,0,10"></TextBlock>
            <Button Click="Button_Click" Content="登录" FontSize="20" HorizontalAlignment="Center" Width="300" Height="40"/>
        </StackPanel>
    </Grid>
</Page>
